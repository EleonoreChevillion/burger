<div class="background"></div>
<style>
    body {
        font-family: "Trebuchet MS", "Lucida Sans Unicode", "Lucida Grande",
            "Lucida Sans", Arial, sans-serif;
        text-align: center;
        color: white;
    }

    .background {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: linear-gradient(rgba(0, 0, 0, 0.5), rgba(0, 0, 0, 0.5)),
            url("/public/assets/images/burger.jpg");
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100%;
    }
</style>
<div class="text-center">
    <h1>Get some burgers</h1>

</div>


<form class="create-form text-center">

    <div class="form-group">
        <label for="burgerInput">
            <br>
            <h2>Burger Name</h2>
        </label>
        <br>
        <input type="text" id="burgerInput" name="name">
    </div>


    <button class="btn btn-primary burger-add" type="submit">Add a Burger</button>

    <div style="height: 100px;"></div>

    <div class="container">
        <div class="row">
            <div class="col-6 not-devoured">
                {{#each burger}}
                <h3>
                    {{#unless  devoured}}
                    {{id}}. {{burger_name}} &nbsp; <button class="btn btn-dark devour" data-id="{{id}}">Devour
                        It!</button>
                    {{/unless}}
                </h3>
                {{/each}}
            </div>

            <div class="col-6 devoured">
                {{#each burger}}
                <h3>
                    {{#if  devoured}}
                    {{id}}. {{burger_name}}
                    {{/if}}

                </h3>
                {{/each}}
            </div>
        </div>
    </div>

</form>